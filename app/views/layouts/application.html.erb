<!DOCTYPE html>
<html>
  <head>
    <title>PictureSharing</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <h1 class="title">PictureSharing</h1>
    <nav class="nav">
      <ul class="menu-group">
        <li class="menu-item"><a href="#">項目1</a></li>
        <li class="menu-item"><a href="#">項目2</a></li>
        <li class="menu-item"><a href="#">項目3</a></li>
        <li class="menu-item"><a href="#">項目4</a></li>
        <li class="menu-item"><a href="#">項目5</a></li>
      </ul>
    </nav>
  </header>

  <<body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if logged_in? %>
      <%= link_to "Profile", user_path(current_user.id),class:'btn btn-primary' %>
      <%= link_to "Logout", session_path(current_user.id),method: :delete, class:"btn btn-primary" %>
    <% else %>
      <%= link_to "Sign up",new_user_path,class:"btn btn-primary"  %>
      <%= link_to "Login",new_session_path,class:"btn btn-primary" %>
    <% end %>
    
    <%= yield %>
  </body>

  <footer>
    <%= 202302 %>
  </footer>
</html>
